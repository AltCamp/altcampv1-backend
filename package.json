{
  "name": "study-buddy",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env node ./bin/www",
    "start:dev": "cross-env nodemon ./bin/www",
    "lint": "cross-env eslint .",
    "format:check": "cross-env npx prettier --check .",
    "format:write": "cross-env npx prettier --write .",
    "test": "cross-env NODE_ENV=test jest --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md,yml,yaml}": "npm run format:write",
    "*.js": "npm run lint"
  },
  "dependencies": {
    "@sentry/node": "^7.54.0",
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.0",
    "cloudinary": "^1.37.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dompurify": "^3.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-joi-validation": "^5.0.1",
    "express-rate-limit": "^6.7.0",
    "handlebars": "^4.7.7",
    "http-status-codes": "^2.2.0",
    "joi": "^17.7.0",
    "joi-objectid": "^4.0.2",
    "jsdom": "^22.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.8.4",
    "morgan": "~1.9.1",
    "nodemailer": "^6.9.3",
    "nodemailer-mock": "^2.0.1",
    "nodemailer-mock-transport": "^1.3.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^4.6.1",
    "winston": "^3.9.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "husky": "^4.3.8",
    "jest": "^29.3.1",
    "lint-staged": "^13.2.2",
    "mongodb-memory-server": "^8.11.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3"
  }
}
